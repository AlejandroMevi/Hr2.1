<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    tools:context=".ui.home.ui.fragments.controlDeAusentismos.ProgAnualVacaciones.ui.ListaSolicitudesFragment">

    <include
        android:id="@+id/header_user"
        layout="@layout/general_header_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_user">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/emptyVacaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/empty_vacaciones"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSinRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_16"
            android:fontFamily="@font/robotoflex"
            android:gravity="center"
            android:lineHeight="24sp"
            android:text="@string/sin_registros_vacaciones"
            android:textColor="#586366"
            android:textFontWeight="600"
            android:textSize="@dimen/text_title"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/emptyVacaciones" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPorElMomento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_16"
            android:fontFamily="@font/robotoflex"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineHeight="24sp"
            android:text="@string/por_el_momento_vacaciones"
            android:textColor="#586366"
            android:textFontWeight="400"
            android:textSize="@dimen/text_subtitle"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txtSinRegistros" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/crear_solicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/agregar_vacaciones"
            android:visibility="gone"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPorElMomento" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDiasVacaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/lista_solicitdes"
            android:textColor="@color/principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaSolicitudes"
            style="@style/Body2_bold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/margin_normal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDiasVacaciones"
            tools:listitem="@layout/lista_solicitudes_prog_anual_vac" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>