<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    tools:context=".ui.home.ui.fragments.controlDeAusentismos.permisos.ui.ListaSolicitudesPeFragment">

    <include
        android:id="@+id/header_user"
        layout="@layout/general_header_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_user">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/emptyPermisos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_permisos"
            android:visibility="gone"
            android:layout_margin="@dimen/margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/emptyAusentismos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/empty_ausentismos"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emptyPermisos" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSinRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_16"
            android:visibility="gone"
            android:lineHeight="24sp"
            android:textFontWeight="600"
            android:fontFamily="@font/robotoflex"
            android:gravity="center"
            android:text="@string/sin_registros_ausentismos"
            android:textSize="@dimen/text_title"
            android:textColor="#586366"
            app:layout_constraintTop_toBottomOf="@+id/emptyAusentismos" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPorElMomento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/margin_16"
            android:visibility="gone"
            android:lineHeight="24sp"
            android:textFontWeight="400"
            android:letterSpacing="0.03"
            android:fontFamily="@font/robotoflex"
            android:gravity="center"
            android:text="@string/por_el_momento_ausentismos"
            android:textSize="@dimen/text_subtitle"
            android:textColor="#586366"
            app:layout_constraintTop_toBottomOf="@+id/txtSinRegistros" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/crear_solicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/crear_ausentismo"
            android:visibility="gone"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_add"
            app:iconSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPorElMomento" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDiasVacaciones"
            style="@style/text_title_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/lista_solicitdes"
            app:layout_constraintTop_toBottomOf="@+id/crear_solicitud" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaSolicitudes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_normal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDiasVacaciones"
            tools:listitem="@layout/lista_solicitudes_prog_anual_vac" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16"
            android:backgroundTint="@color/principal"
            android:text="@string/agregar"
            android:textColor="@color/white"
            android:tintMode="@color/white"
            app:icon="@drawable/ic_add"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/floating"
            app:layout_constraintEnd_toEndOf="parent">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_add"
                android:tintMode="@color/principal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:maxImageSize="30dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Nueva solicitud"
                app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton1"
                app:layout_constraintEnd_toStartOf="@+id/floatingActionButton1"
                app:layout_constraintTop_toTopOf="@+id/floatingActionButton1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>