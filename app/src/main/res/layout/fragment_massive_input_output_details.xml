<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.home.ui.fragments.timeManagement.massiveInputPutput.ui.MassiveInputOutputDetailsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_16"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:textSize="@dimen/margin_16"
            android:letterSpacing="0.03"
            android:textColor="@color/selecttxt"
            android:text="Completa los siguientes campos de la entrada y/o salida de un empleado."/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddEmploye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            android:text="Seleccionar Empleado"
            app:strokeColor="@color/principal"
            app:cornerRadius="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_16"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:textSize="@dimen/margin_16"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_16"
                android:textColor="@color/numEmployee"
                android:text="Empleado seleccionado"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvEmploye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/listImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/margin_16"
                        android:src="@drawable/user_icon_big"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linearLayoutCompat5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_16"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/listImage"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/listNumEmployee"
                            style="@style/Caption_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/numEmployee"
                            android:textSize="10sp"
                            tools:text="1234567890" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/listName"
                            style="@style/Body2_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/nameEmployee"
                            tools:text="title" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/puesto"
                            style="@style/Caption_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/puesto"
                            android:textSize="12sp"
                            tools:text="subtitle" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/turno"
                            style="@style/Caption_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:textColor="@color/puesto"
                            android:textSize="12sp"
                            tools:text="subtitle" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/principal"
                        android:layout_margin="@dimen/margin_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_title_bold"
            android:layout_marginTop="@dimen/margin_16"
            android:text="Datos del registro"/>

        <include
            android:id="@+id/et_date"
            layout="@layout/general_edit_text_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cause" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal">

            <include
                android:id="@+id/et_input"
                layout="@layout/general_edit_text_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"/>

            <include
                android:id="@+id/et_output"
                layout="@layout/general_edit_text_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            android:id="@+id/sp_station"
            layout="@layout/general_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/et_input" />

        <include
            android:id="@+id/sp_delayed"
            layout="@layout/general_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/et_input" />

        <include
            android:id="@+id/sp_zone"
            layout="@layout/general_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/et_input" />

        <include
            android:id="@+id/sp_departament"
            layout="@layout/general_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/et_input" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/swRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:textSize="@dimen/text_subtitle"
                android:letterSpacing="0.03"
                android:layout_marginStart="@dimen/margin_normal"
                android:textColor="@color/selecttxt"
                android:text="Registro activado"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <include
            android:id="@+id/save"
            layout="@layout/general_button_save"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Eliminar registro" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>