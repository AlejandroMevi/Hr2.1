<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearDesc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/round_descansos"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textviewDescansos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineHeight="16sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/kmDescansos"
            android:textColor="@color/gray_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/round_festivos"
            android:gravity="center" />

        <TextView
            android:id="@+id/textviewFestivos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineHeight="16sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/kmFestivos"
            android:textColor="@color/gray_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/round_vacaciones"
            android:gravity="center" />

        <TextView
            android:id="@+id/textviewAusentismos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineHeight="16sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/menu_vacaciones"
            android:textColor="@color/gray_title"
            android:textSize="12sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textAus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/round_ausentismos"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtAusentismos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineHeight="16sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/kmAusentismos"
            android:textColor="@color/gray_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/texRetardos"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/round_retardos"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtRetardos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineHeight="16sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/vrpcaRetardos"
            android:textColor="@color/gray_title"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>