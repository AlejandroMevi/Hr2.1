<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header_user"
            layout="@layout/general_header_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginVertical="@dimen/margin_normal"
            android:layout_weight="1">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDiasVacaciones"
                style="@style/text_title_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fvDiasVacaciones"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNumberDiasTomados"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintStart_toEndOf="@+id/txtDiasTomados"
                app:layout_constraintTop_toBottomOf="@+id/txtDiasVacaciones"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDiasTomados"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/fpaDiasTomados"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDiasVacaciones" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNumberDiasDisfrutar"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintStart_toEndOf="@+id/txtDiasDisfruatr"
                app:layout_constraintTop_toBottomOf="@+id/txtNumberDiasTomados"
                tools:text="0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDiasDisfruatr"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/fvDiasPorDisfrutar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDiasTomados" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNuevoSolicitud"
                style="@style/text_title_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/label_edit_solicitud"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNumberDiasDisfrutar" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFecha"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/fpFecha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNuevoSolicitud" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/FechaInicio"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/txtFecha"
                app:layout_constraintTop_toTopOf="@+id/txtFecha"
                tools:text="31/01/2023" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAl"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/fpaAl"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/FechaInicio"
                app:layout_constraintTop_toTopOf="@+id/FechaInicio" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/FechaFinal"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:gravity="center"
                android:text="31/01/2023"
                app:layout_constraintStart_toEndOf="@+id/txtAl"
                app:layout_constraintTop_toTopOf="@+id/txtAl" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFactor"
                style="@style/Caption_Regular"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:text="@string/fpaFactor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFecha" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtFactor2"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginTop="5dp"
                android:gravity="center|start"
                app:layout_constraintStart_toEndOf="@+id/txtFactor"
                app:layout_constraintTop_toBottomOf="@+id/txtFecha"
                tools:text="1.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDias"
                style="@style/Caption_Regular"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:text="@string/faDias"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFactor" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDias2"
                style="@style/Caption_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginTop="5dp"
                android:gravity="center|start"
                app:layout_constraintStart_toEndOf="@+id/txtDias"
                app:layout_constraintTop_toBottomOf="@+id/txtFactor"
                tools:text="1 Dia" />

            <include
                android:id="@+id/linearDesc"
                layout="@layout/header_indications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDias2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titlesContainer"
                style="@style/text_title_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/kaEnero"
                app:layout_constraintTop_toBottomOf="@+id/linearDesc" />

            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                app:cv_dayViewResource="@layout/calendar_day_layout"
                app:cv_monthHeaderResource="@layout/calendar_day_titles_container"
                app:cv_orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/titlesContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/save"
            layout="@layout/general_button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>