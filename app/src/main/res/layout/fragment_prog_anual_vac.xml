<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header_user"
            layout="@layout/general_header_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListaSolicitudes"
                style="@style/ButtonTextRHD"
                android:layout_width="wrap_content"
                android:text="@string/fpaListaSolicitud"
                app:icon="@drawable/ic_baseline_arrow_circle_right_24"
                app:iconSize="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtSelectDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_text"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/delete"
                android:drawableTint="@color/principal"
                android:focusable="false"
                android:inputType="none"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/cero_dias_seleccionados"
                android:textColor="@color/selecttxt"
                android:textSize="16sp"
                app:layout_constraintCircleRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnListaSolicitudes" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titlesContainer"
                style="@style/SubHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/principal"
                android:gravity="center"
                android:text="@string/kaEnero"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSelectDays" />

            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                app:cv_dayViewResource="@layout/calendar_day_layout"
                app:cv_monthHeaderResource="@layout/calendar_day_titles_container"
                app:cv_orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titlesContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/save"
            layout="@layout/general_button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_large" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>