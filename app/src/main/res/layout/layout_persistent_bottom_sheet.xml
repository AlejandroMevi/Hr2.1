<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    app:behavior_hideable="false"
    app:behavior_peekHeight="140dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/collapsed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8"
            app:dividerInsetEnd="16dp"
            app:dividerInsetStart="16dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="0.02"
                android:lineHeight="24sp"
                android:lineSpacingExtra="5sp"
                android:text="EstadÃ­sticas del mes"
                android:textColor="@color/puesto"
                android:textFontWeight="600"
                android:textSize="16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="79dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="#E4FAF2"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.03"
                    android:lineHeight="16sp"
                    android:text="Vacaciones"
                    android:textColor="#405B75"
                    android:textSize="10sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:letterSpacing="0.02"
                    android:lineHeight="24sp"
                    android:lineSpacingExtra="8sp"
                    android:text="4"
                    android:textColor="#31A07C"
                    android:textSize="14sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="79dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="#BBEFFB"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.03"
                    android:lineHeight="16sp"
                    android:text="Ausentismos"
                    android:textColor="#405B75"
                    android:textSize="10sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:letterSpacing="0.02"
                    android:lineHeight="24sp"
                    android:lineSpacingExtra="8sp"
                    android:text="4"
                    android:textColor="#0F9ABD"
                    android:textSize="14sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="79dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="#C9E4FA"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.03"
                    android:lineHeight="16sp"
                    android:text="Permisos"
                    android:textColor="#405B75"
                    android:textSize="10sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:letterSpacing="0.02"
                    android:lineHeight="24sp"
                    android:lineSpacingExtra="8sp"
                    android:text="4"
                    android:textColor="#1776BF"
                    android:textSize="14sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="79dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="#F7E1E8"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.03"
                    android:lineHeight="16sp"
                    android:text="Retardos"
                    android:textColor="#405B75"
                    android:textSize="10sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:letterSpacing="0.02"
                    android:lineHeight="24sp"
                    android:lineSpacingExtra="8sp"
                    android:text="4"
                    android:textColor="#AB4957"
                    android:textSize="14sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/header_user"
        layout="@layout/general_header_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintTop_toBottomOf="@+id/collapsed" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_24"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_user">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_8"
                android:src="@drawable/calendar_today" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dateMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="3sp"
                android:text="30 / Noviembre / 2023"
                android:textFontWeight="500"
                android:textSize="18sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:id="@+id/previusMonth"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_24"
                android:src="@drawable/arrow_back_ios_new"
                app:tint="@color/principal" />

            <ImageView
                android:id="@+id/nextMonth"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/margin_8"
                android:src="@drawable/arrow_forward_ios"
                app:tint="@color/principal" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleHolidays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24"
        android:background="#E4FAF2"
        android:gravity="top"
        android:letterSpacing="0.03"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:paddingHorizontal="@dimen/margin_16"
        android:paddingVertical="4dp"
        android:text="@string/fvDiasVacaciones"
        android:textColor="#31A07C"
        android:textFontWeight="600"
        android:textSize="@dimen/text_subtitle"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat8" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleAusentismos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:background="#BBEFFB"
        android:gravity="top"
        android:letterSpacing="0.03"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:paddingHorizontal="@dimen/margin_16"
        android:paddingVertical="4dp"
        android:text="@string/kmAusentismos"
        android:textColor="#0F9ABD"
        android:textFontWeight="600"
        android:textSize="@dimen/text_subtitle"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleHolidays" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titlePermisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:background="#C9E4FA"
        android:gravity="top"
        android:letterSpacing="0.03"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:paddingHorizontal="@dimen/margin_16"
        android:paddingVertical="4dp"
        android:text="@string/menu_permisos"
        android:textColor="#1776BF"
        android:textFontWeight="600"
        android:textSize="@dimen/text_subtitle"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAusentismos" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleRetardos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_large"
        android:background="#F7E1E8"
        android:gravity="top"
        android:letterSpacing="0.03"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:paddingHorizontal="@dimen/margin_16"
        android:paddingVertical="4dp"
        android:text="@string/menu_permisos"
        android:textColor="#AB4957"
        android:textFontWeight="600"
        android:textSize="@dimen/text_subtitle"
        android:translationY="-2.62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlePermisos" />
</androidx.constraintlayout.widget.ConstraintLayout>